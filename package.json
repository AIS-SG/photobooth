{
  "name": "photobooth",
  "private": true,
  "version": "1.0.0",
  "description": "photobooth web site",
  "workspaces": ["fe", "be"],
  "scripts": {
    "dev": "npm-run-all --parallel dev:fe dev:be",
    "dev:fe": "npm run dev --workspace=fe",
    "dev:be": "npm run dev --workspace=be",
    "build": "npm-run-all build:fe build:be",
    "build:fe": "npm run build --workspace=fe",
    "build:be": "npm run build --workspace=be",
    "db:push": "npm run prisma --workspace=be db push",
    "db:migrate": "npm run prisma --workspace=be migrate dev",
    "db:studio": "npm run prisma --workspace=be studio"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
