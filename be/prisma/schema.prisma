// be/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  strips    Strip[]
}

model Strip {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  title     String?
  layout    String
  imageUrl  String
  photos    Photo[]
  createdAt DateTime @default(now())
}

model Photo {
  id       String  @id @default(cuid())
  strip    Strip?  @relation(fields: [stripId], references: [id])
  stripId  String?
  imageUrl String
  order    Int
}
